{
  "name": "ecomp-door",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "db:create": "node ./databaseconfig.js && ts-node ./node_modules/typeorm/cli.js migration:run",
    "db:drop": "ts-node ./node_modules/typeorm-extension/dist/cli/index.js db:drop",
    "typeorm": "ts-node-dev ./node_modules/typeorm/cli.js",
    "build": "tsc && cross-env NODE_ENV=prod ts-node ./node_modules/typeorm/cli.js migration:run",
    "start": "cross-env NODE_ENV=prod node build/src/server.js",
    "dev": "cross-env NODE_ENV=dev ts-node-dev --transpile-only --ignore-watch node_modules ./src/server.ts"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.29",
    "@types/uuid": "^8.3.4",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "express": "^4.18.0",
    "jsonwebtoken": "^8.5.1",
    "socket.io": "^4.5.0",
    "sqlite3": "^5.0.6",
    "typeorm": "^0.3.6",
    "uuid": "^8.3.2"
  }
}
